<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>

<form method="get" action="{{ path('search_books') }}">
    <label for="search_query">Recherche :</label>
    <input type="text" id="search_query" name="search_query" value="{{ app.request.get('search_query') }}" placeholder="Recherchez des livres par ref">
    <button type="submit">Rechercher</button>
</form>

<h1>List Books</h1>
<a href="{{ path('app_AddBook')}}">Add</a>

<table border="1">
    <tr>
        <th>Title</th>

        <th>Publication date</th>
        <th>published</th>
        <th>category</th>

        <th>author</th>
        <th>Actions</th>
    </tr>


    <tr>  {% for b in publishedBooks %} </tr>
    <td>{{ b.title }}</td>
    <td>{{ b.publicationDate | date('M-d-Y') }}</td>
    <td> {{b.published }}</td>

    <td> {{b.category }}</td>
    <td>{{ b.author.username }}</td>
    <td><a href="{{ path('app_editBook', {'ref': b.ref}) }}">edit</a>
        <a href="{{ path('app_deleteBook', {'ref': b.ref}) }}">delete</a>
        <a href="{{ path('app_detailBook', {'ref': b.ref}) }}">detail</a>



    </td>


    {% endfor %}

    <p>Number of published books : {{ numPublishedBooks }}</p>
    <p>Number of Unpublished books : {{ numUnPublishedBooks }}</p>

</table>
</body>
</html>